            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "bash",
            "args": [
                "-c",
                "latexmk",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir='%OUTDIR%'",
                "'%DOC%'"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "bash",
            "args": [
                "-c",
                "pdflatex -synctex=1 -interaction=nonstopmode -file-line-error %DOCFILE%",
            ],
            "env": {}
        },
        {
            "name": "xelatex",
            "command": "bash",
            "args": [
                "-c",
                "xelatex -synctex=1 -interaction=nonstopmode -file-line-error %DOCFILE%",
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bash",
            "args": [
                "-c",
                "bibtex %DOCFILE%",
            ],
            "env": {}
        },
        {
            "name": "bibtex_w",
            "command": "bash",
            "args": [
                "-c",
                "bibtex `wslpath -a \"%DOCFILE%\"` `wslpath -a \"%DOC%\"`",
            ],
            "env": {}
        }
    ],
